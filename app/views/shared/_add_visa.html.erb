<%= form_tag add_visa_passport_path, remote: true do %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label" style="padding:6px 0 0 0;">Visa Type:</label>
    <div class="col-sm-2" style="padding:0;">
      <%= select_tag :visa_type, options_for_select(Visa::VISA_TYPES), :class => "form-control" %>
      </div>
      <%= hidden_field_tag :passport_id,  @passport.id %>

      <div class="col-sm-3">
        <%= submit_tag 'Add Visa', class: 'btn btn-primary' %>
        </div>
      </div>

    <%end%>

<div class="clearfix"></div>