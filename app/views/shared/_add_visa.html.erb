<%= form_tag add_visa_passport_path, remote: true do %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Add New Visa</label>
    <div class="col-sm-4">
      <%= select_tag :visa_type, options_for_select(Visa::VISA_TYPES) %>
    </div>
    <%= text_field_tag :passport_id,  @passport.id %>

    <div class="col-sm-3">
      <%= submit_tag 'Add Visa', class: 'btn btn-primary' %>
      </div>
    </div>

  <%end%>