$('#message_id').html('');
<% if request.get? %>
  $('#list_visa').html('');
  <% if !@error.present? %>
    $('#add_visa').html('<%= escape_javascript(render partial: 'shared/add_visa') %>');  
  <%else%>       
    $('#message_id').html('<%= "#{escape_javascript(render partial: 'layouts/messages')}".html_safe %>');
  <%end%>
<%else%>
  <% if !@error.present? %>
    $('#add_visa').html('');
    $('#list_visa').html('<%= escape_javascript(render partial: 'shared/visas') %>');
  <%end%>
  $('#message_id').html('<%= "#{escape_javascript(render partial: 'layouts/messages')}".html_safe %>');
<%end%>
$.unblockUI();